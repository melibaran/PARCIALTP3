<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir HTTP en localhost y emuladores para desarrollo con Firebase -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android Emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Emulator hostname -->
        <domain includeSubdomains="true">emulator</domain>
        <!-- Firebase emulator y servicios locales -->
        <domain includeSubdomains="true">*.firebaseio.com</domain>
    </domain-config>

    <!-- Para producciÃ³n, HTTPS es obligatorio en todos lados -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">*</domain>
    </domain-config>
</network-security-config>

